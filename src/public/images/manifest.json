{
  "manifest_version": 3,
  "name": "AI CoSearch",
  "version": "1.0",
  "description": "Your AI search assistant",
  "icons": {
    "16": "public/images/icon-16.png",
    "48": "public/images/icon-48.png",
    "128": "public/images/icon-128.png"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "content_scripts": [
    {
      "js": ["content-script/index.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "service-worker/index.js"
  },
  "permissions": ["sidePanel", "contextMenus"]
}
